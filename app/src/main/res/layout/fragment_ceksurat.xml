<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CekSurat.CekSuratFragment"
    android:background="@mipmap/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/text_ceksurat"
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="#FFFFFF"
                android:text="Cari Surat"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">


            <EditText
                android:id="@+id/TextFieldSurat"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:textIsSelectable="false"
                tools:text="Resi Surat"></EditText>

            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="#1a1aff"
                android:text="cari"
                android:textSize="15dp"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/determinateBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:progress="12"/>
            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Proses Surat : Validasi"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Proses Surat : Konfirmasi"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Proses Surat : Tanda Tangan"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Proses Surat : Stempel"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Proses Surat : Pemeriksaan Ulang"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Proses Surat : Surat bisa diambil"></TextView>

        </LinearLayout>
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/button_kembali"
            android:background="#1a1aff">
        </Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>